doctype html
html.no-js(lang='{{ language.current || "en" }}')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        title(ng-bind='{{ "Weather" | translate:language.translator.current }}') Weather
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width,initial-scale=1,maximum-scale=1')
        link(rel='icon', href='img/logo.svg', sizes='any')
        link(rel='icon', href='img/icon-32', type='image/png', sizes='32x32')
        link(rel='stylesheet', href='css/app.css')
    body(layout='column')
        section(layout='row', flex, ng-cloak)
            md-content(flex, layout='column', layout-fill)
                md-toolbar.main-nav.md-whiteframe-z1
                    h3.md-toolbar-tools
                        md-button(ng-click='back()', aria-label='Back', ng-show='showBack')
                            md-icon(md-font-icon='icon ion-chevron-left')
                        .md-title(flex, ng-link='/home')
                            span {{ "Weather" | translate:language.translator.current }}
                        md-button(ng-link='/settings', aria-label='Settings')
                            md-icon(md-font-icon='icon ion-android-settings')
                md-content.main-content(ng-view, flex, layout, layout-fill)
                telemetry-item(data-title='Index')
        script(src='js/index.js')
        script(src='js/script.min.js')
        script(src='boot.js')
